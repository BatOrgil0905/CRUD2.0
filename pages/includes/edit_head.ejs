    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        .wrap{
            width: 100%;
            height: 100vh;
            background-color: rgb(176, 238, 168);
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .wrap form {
            width: 375px;
            height: auto;
            padding: 10px;
            background-color: #fff;
            border-radius: 1rem;
            box-shadow: 10px 10px 18px 10px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
        }
        .wrap form label{
            font-family: consolas;
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 5px;
        }
        .wrap form input {
            font-family: consolas;
            padding: 10px 1rem;
            border-radius: 8px;
            background-color: rgb(227, 211, 236);
            border: 1px solid rgb(41, 36, 36);
            margin-bottom: 10px;
        }
        .wrap form input:focus{
            outline: none;
            border: 2px solid rgb(0, 47, 255);
        }
        .wrap form input[type="submit"]{
            background-color: aquamarine;
            cursor: pointer;
        }
    </style>
